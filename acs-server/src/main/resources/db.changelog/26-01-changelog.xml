<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1748296718839-9" author="konda">
        <createTable tableName="acs_groups">
            <column name="group_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="subject_type_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="parent_subject_type_id" type="VARCHAR(255)"/>
            <column name="parent_group_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1748296718839-10" author="konda">
        <createTable tableName="acs_groups_nodes">
            <column name="group_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="group_subject_type_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="node_value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1748296718839-11" author="konda">
        <createTable tableName="acs_groups_subjects">
            <column name="group_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="group_subject_type_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="subject_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="subject_type_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1748296718839-12" author="konda">
        <addPrimaryKey columnNames="subject_type_id, group_name" constraintName="pk_acs_groups" tableName="acs_groups"/>
    </changeSet>
    <changeSet id="1748296718839-13" author="konda">
        <createIndex indexName="IX_pk_acs_grants" tableName="acs_grants" unique="true">
            <column name="accessor_id"/>
            <column name="accessor_subject_type_id"/>
            <column name="accessed_id"/>
            <column name="accessed_subject_type_id"/>
            <column name="node_value"/>
        </createIndex>
    </changeSet>
    <changeSet id="1748296718839-14" author="konda">
        <createIndex indexName="IX_pk_acs_nodes" tableName="acs_nodes" unique="true">
            <column name="value"/>
        </createIndex>
    </changeSet>
    <changeSet id="1748296718839-15" author="konda">
        <createIndex indexName="IX_pk_acs_subject_types" tableName="acs_subject_types" unique="true">
            <column name="id"/>
        </createIndex>
    </changeSet>
    <changeSet id="1748296718839-16" author="konda">
        <createIndex indexName="IX_pk_acs_subjects" tableName="acs_subjects" unique="true">
            <column name="id"/>
            <column name="subject_type_id"/>
        </createIndex>
    </changeSet>
    <changeSet id="1748296718839-17" author="konda">
        <addForeignKeyConstraint baseColumnNames="parent_subject_type_id,parent_group_id" baseTableName="acs_groups"
                                 constraintName="FK_ACS_GROUPS_ON_PASUTYIDPAGRID"
                                 referencedColumnNames="subject_type_id,group_name" referencedTableName="acs_groups"/>
    </changeSet>
    <changeSet id="1748296718839-18" author="konda">
        <addForeignKeyConstraint baseColumnNames="subject_type_id" baseTableName="acs_groups"
                                 constraintName="FK_ACS_GROUPS_ON_SUBJECT_TYPE" referencedColumnNames="id"
                                 referencedTableName="acs_subject_types"/>
    </changeSet>
    <changeSet id="1748296718839-19" author="konda">
        <addForeignKeyConstraint baseColumnNames="group_subject_type_id,group_name" baseTableName="acs_groups_nodes"
                                 constraintName="fk_acsgronod_on_group_entity"
                                 referencedColumnNames="subject_type_id,group_name" referencedTableName="acs_groups"/>
    </changeSet>
    <changeSet id="1748296718839-20" author="konda">
        <addForeignKeyConstraint baseColumnNames="node_value" baseTableName="acs_groups_nodes"
                                 constraintName="fk_acsgronod_on_node_entity" referencedColumnNames="value"
                                 referencedTableName="acs_nodes"/>
    </changeSet>
    <changeSet id="1748296718839-21" author="konda">
        <addForeignKeyConstraint baseColumnNames="group_subject_type_id,group_name" baseTableName="acs_groups_subjects"
                                 constraintName="fk_acsgrosub_on_group_entity"
                                 referencedColumnNames="subject_type_id,group_name" referencedTableName="acs_groups"/>
    </changeSet>
    <changeSet id="1748296718839-22" author="konda">
        <addForeignKeyConstraint baseColumnNames="subject_id,subject_type_id" baseTableName="acs_groups_subjects"
                                 constraintName="fk_acsgrosub_on_subject_entity"
                                 referencedColumnNames="id,subject_type_id" referencedTableName="acs_subjects"/>
    </changeSet>

</databaseChangeLog>